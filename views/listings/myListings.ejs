<%- include('../partials/head') %>

  <div class="container mt-5">
    <h1 class="text-center custom-font-text mb-4">My Listings</h1>

    <% if (listings.length===0) { %>
      <p class="text-center">You have no listings yet.</p>
      <% } else { %>
        <div class="row row-cols-1 row-cols-md-2 g-4">
          <% listings.forEach(listing=> { %>
            <div class="col">
              <div class="card h-100 shadow-sm border-0 listing-card">
                <div class="card-body">
                  <h5 class="card-title"><a href="/listings/<%= listing._id %>" class="listing-link">
                      <%= listing.title %>
                    </a></h5>
                </div>
              </div>
            </div>
            <% }) %>
        </div>
        <% } %>
  </div>